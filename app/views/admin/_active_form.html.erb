<%= form_tag '/admin/activation', data: {remote: true} %>
  <div class="form-group">
    <fieldset>
        <legend>Foto de identidade: </legend>
        <img class="active_img" src="<%= @request.document_photo %>">
    </fieldset>
  </div>
  
  <div class="form-group">
    <fieldset>
        <legend>Selfie de identidade: </legend>
        <img class="active_img" src="<%= @request.document_selfie %>">
    </fieldset>
  </div>
  
  <div class="form-group">
    <%=  label_tag :first_name, "Primeiro nome" %>
    <%=  text_field_tag :first_name, @user.first_name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%=  label_tag :last_name, "Último nome" %>
    <%=  text_field_tag :last_name, @user.last_name, class: 'form-control', required: true %>
  </div>
  
  <div class="form-group">
    <%=  label_tag :username %>
    <%=  text_field_tag :username, @user.username, class: 'form-control', required: true %>
  </div>
  
  
  <div class="form-group">
    <%=  label_tag :birth, "Data de nascimento" %>
    <%=  date_field_tag :birth, @user.birth, class: 'form-control', required: true %>
  </div>
  
  <div class="form-group">
    <%=  label_tag :document, "CPF" %>
    <%=  text_field_tag :document, @user.document, class: 'form-control', required: true %>
  </div>
  <%= hidden_field_tag :request_id, @request.id %>
  <%=  submit_tag 'Ativar', class: 'btn btn-primary btn-lg' %>
  
  <div class="form-group">
    <%=  label_tag :justify, "Justificativa" %>
    <div class="alias-tooltip" title="Escreva uma justificativa aqui para justificar a rejeição da requisição do usuário, mínimo de 30 caracteres." data-toggle="tooltip" data-placement="top"><%=  text_field_tag :justify, nil, class: 'justify-input form-control' %></div>
  </div>
  
  <%=  submit_tag 'Desativar', disabled: true, class: 'btn btn-primary btn-lg submit_deactivate' %>
</form>
<script>
  $(document).ready(function(){
    $('.alias-tooltip').tooltip();
  });
  
  $('.justify-input').keyup(function(){
    if ($('.justify-input').val().length >= 30){
      $('.submit_deactivate').prop("disabled",false)
    } else{
      $('.submit_deactivate').prop("disabled",true)
    }
  })
</script>