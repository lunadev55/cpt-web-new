<%= stylesheet_link_tag params[:controller] %>

<div class="container small register">
<div align="center">
  <fieldset>
    <legend>Cripto Câmbio Exchange - Login</legend>
    <img class="logo_login" src="assets/images/logo.png">
  </fieldset>
</div>

<%= form_for @user_session do |f| %>
  <%= render 'shared/errors', object: @user_session %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha" %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me, "Lembrar" %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
  <br/><br/>
  <%= link_to 'Esqueceu a senha?', new_password_reset_path, class: 'btn btn-sm btn-default' %>
  <%= link_to 'Não possui uma conta?', new_user_path, class: 'btn btn-sm btn-default' %>
<% end %>

</div>