$( ".saldos" ).html( "<%= escape_javascript( render( :partial => "layouts/saldos") ) %>" );
$( ".withdrawal_form_element")[0].reset();
$(".withdrawal_button").prop('disabled', false);
$(".comission").html("");
$(".total").html("");


$('.centered-flash').html('<% flash.each do |key, value| %><div class="alert alert-<%= key %>"><%= value %><i class="fa fa-window-close pointer" aria-hidden="true"></i></div><% end %>');

function clear_window(){
  $('.centered-flash').html('');
};

$(document).ready(function(){
setTimeout( 'clear_window()', 5000 )

});

$( ".fa-window-close" ).click(function() {
  $('.centered-flash').html('');
});