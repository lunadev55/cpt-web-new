<div id="priceSlide" class="carousel slide price-box" data-ride="carousel">
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% EXCHANGE_PARES.each do |k| %>
        <div align="center" class="item <% if k == EXCHANGE_PARES.first %>active<% end %>">
          
            <div class="panel panel-default">
              <div class="panel-heading"><b><%= k %>: </b></div>
              <div class="panel-body">
              <h5>
                  <div class="row">
                      <div class="col-md-4 col-xs-4">
                        <p>Compra <i class="fa fa-arrow-up" aria-hidden="true"></i>: <br>
                          <font class="small-font"><j class="<%= k.tr(" ", "").tr("/","_") %>_buy recent_values"><%= last_price(k.tr(" ", ""),"buy","executada") %></j><b> <%= k.split(" ")[2] %></b></font>
                        </div>
                    <div class="col-md-4 col-xs-4">
                       <p> Venda <i class="fa fa-arrow-up" aria-hidden="true"></i>: <br>
                          <font class="small-font"><j class="<%= k.tr(" ", "") %>_sell recent_values"><%= last_price(k.tr(" ", ""),"sell","executada") %></j> <b> <%= k.split(" ")[2] %></b></font>
                        </p>
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <p> Volume 24hrs:<br><b> <font class="small-font"><j class="<%= k.tr(" ", "") %>_volume recent_values"></j> <%= k.split(" ")[0] %></b></font>
                    </div>
                </div>
              </h5>
              </div>
            </div>
        </div>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#priceSlide" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#priceSlide" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>