<!DOCTYPE html>
<html>
	
<head>
  <meta charset="utf-8">
  <j class="current_place"></j>
  <title>Cripto Câmbio &mdash; Exchange</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "bootstrap.js" %>
  <%= action_cable_meta_tag %>
  <%= csrf_meta_tags %>
	<meta charset="utf-8">
	
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<!-- jQuery -->
	<script src="/js/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script src="/js/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script src="/js/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script src="/js/jquery.waypoints.min.js"></script>
	<!-- Stellar -->
	<script src="/js/jquery.stellar.min.js"></script>
	<!-- Magnific Popup -->
	<script src="/js/jquery.magnific-popup.min.js"></script>
	<script src="/js/magnific-popup-options.js"></script>
	<!-- Main -->
	<script src="/js/main.js"></script>
	<!-- upload -->
	<script src="/js/jquery.ui.widget.js"></script>
	<script src="/js/z.jquery.fileupload.js"></script>
</head>
<script>
		$(document).ready(function(){
		   $(".current_place").prop("place","overview");
		   $('body').append("<prices class='current_prices'>");
		   $('[data-toggle="tooltip"]').tooltip();
		});
	
</script>
<body>
  
<nav class="gtco-nav" role="navigation">
		<div class="container">
			<div class="row">
				<div class="col-sm-2 col-xs-12">
					<div id="gtco-logo"><a href="index.html">Cpt<em>cambio</em></a></div>
				</div>
				<div class="col-xs-10 text-right menu-1 main-nav">
					<ul>
						<li class="active">
							<% if current_user.nil? %>
								<a href="/" data-nav-section="home">Home</a></li>
							<% else %>
								<a href="/dashboard/index" class="external" data-nav-section="home">Home</a></li>
							<% end %>
						<li><a href="/exchange" data-nav-section="exchange">Exchange</a></li>
						<li><a href="#" data-nav-section="practice-areas">Negócios</a></li>
						<li><a href="#" data-nav-section="our-team">Missão</a></li>
						<% if current_user.nil? %>
						<li class="btn-cta"><a href="/sign_in" class="external" data-nav-section="contact"><span>Login</span></a></li>
						<li class="btn-cta"><a href="<%= new_user_path %>" class="external" data-nav-section="contact"><span>Cadastro</span></a></li>
						<% else %>
						<li class="btn-cta"><a href="/sign_out" class="external" data-nav-section="contact"><span>Logout</span></a></li>
						<% end %>
						<li><i class="fa fa-circle online-offline" data-toggle="tooltip" title="<%= HELPER_TEXT["online-offline"] %>" data-placement="bottom" style="color: red;" aria-hidden="true"> Offline </i></li>
						<!-- For external page link -->
						<!--<li><a href="http://freehtml5.co/" class="external">External</a></li>-->
					</ul>
				</div>
			</div>
			
		</div>
	</nav>

<div class="centered-flash">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
      <i class="fa fa-window-close pointer" aria-hidden="true"></i>
    </div>
  <% end %>
  
</div>
  <%= yield %>

<!-- Modal -->
            <div id="termsModal" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><b>Termos de uso / Resposabilidade</b></h4>
                  </div>
                  <div class="modal-body">
                    <i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                  </div>
                </div>
              </div>
            </div>
        </div>

<div id="footer">
  
</div>

</body>
</html>
