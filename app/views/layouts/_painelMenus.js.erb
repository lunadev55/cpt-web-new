  $('.result_lines').html('<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>');
  option = $('.hidden_cur_op').prop('value');
  date = $(this).data('date-type');
  $.ajax({
    url: "/dashboard/info/getpayments",
    data: { 
        "currency": option,
        "dateInicial": date
    },
