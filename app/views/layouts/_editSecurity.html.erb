<h2>Configurações de segurança</h2>
<div class="well col-md-5">
<%= form_for @user, url: dashboard_changepasswd_url, html: {class: "editForm", remote: true } do |k|%>
  <%= k.hidden_field :email, value: @user.email %>
  <div class="form-group row">
    <div class="col-md-4">
    <h6><%= k.label :new_password, "Nova senha" %></h6>
    </div>
    <div class="col-md-8">
    <%= k.password_field :new_password, html: {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group row">
      <div class="col-md-4">
    <h6><%= k.label :password_confirmation, "Confirme a senha" %></h6>
    </div>
    <div class="col-md-8">
    <%= k.password_field :password_confirmation, html: {class: 'form-control'} %>
    </div>
  </div>
  
  <div class="form-group">
    Insira sua senha para confirmar modificações:
  </div>
  <div class="form-group row">
    <div class="col-md-4">
    <h6><%= k.label :password, "Senha atual" %></h6>
    </div>
    <div class="col-md-8">
    <%= k.password_field :password,  html: {class: 'form-control'} %>
    </div>
  </div>


  <%= k.submit 'Submeter', class: 'submit btn btn-primary btn-lg' %>
  <% end %>
  </div>
  
  </div>