<div class="col-md-6 well">
<h2>Editar informações cadastrais</h2>
<%= form_tag nil, class:"editForm", remote: true %>
  <div class="form-group">
    <%= label_tag :first_name, "Primeiro nome" %>
    <%= text_field_tag :first_name, @user.first_name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :last_name, "Último nome" %>
    <%= text_field_tag :last_name, @user.last_name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, @user.email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, @user.username, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= hidden_field_tag :user_id, @user.id, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :birth %>
    <%= date_field_tag :birth, @user.birth, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :document %>
    <%= text_field_tag :document, @user.document, class: 'form-control' %>
  </div>
  <div class="form-group">
    Insira sua senha para confirmar modificações:
  </div>
  <div class="form-group row">
    <div class="col-md-4">
    <h6><%= label_tag :password, "Senha" %></h6>
    </div>
    <div class="col-md-8">
    <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
      <div class="col-md-4">
    <h6><%= label_tag :password_confirmation, "Confirme a senha" %></h6>
    </div>
    <div class="col-md-8">
    <%= password_field_tag :password_confirmation, nil, class: 'form-control' %>
    </div>
  </div>

  <%= submit_tag 'Submeter', class: 'submit btn btn-primary btn-lg' %>
  </div>